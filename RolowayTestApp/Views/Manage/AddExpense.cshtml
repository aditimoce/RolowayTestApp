@model RolowayTestApp.Models.AddExpenseViewModel

@{
    ViewBag.Title = "Add Expense";
}

<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("AddExpense", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    
        @Html.AntiForgeryToken()

